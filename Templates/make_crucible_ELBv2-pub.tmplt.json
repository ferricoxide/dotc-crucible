{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "SetPrettyName": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "ProxyPrettyName" }, "" ] }
      ]
    }
  },
  "Description": "Template for creating a public ELB for users to connect through in order to connect to the Crucible service.",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Parameters": [
            "CrucibleInstanceId",
            "ProxyPrettyName",
            "HaSubnets",
            "SecurityGroupIds",
            "CrucibleListenPort",
            "CrucibleServicePort",
            "CrucibleListenerCert"
          ]
        }
      ]
    }
  },
  "Outputs": {
    "CrucibleAlbFqdn": {
      "Description": "Crucible front-end's IP address",
      "Export": {
        "Name" : { "Fn::Sub": "${AWS::StackName}-AlbDnsName" }
      },
      "Value": { "Fn::GetAtt": [ "CruciblePubAlbLoadBalancer", "DNSName" ] }
    }
  },
  "Parameters": {
    "CrucibleListenerCert": {
      "Default": "",
      "Description": "Name/ID of the ACM-managed SSL Certificate to protect public listener.",
      "Type": "String"
    },
    "CrucibleListenPort": {
      "Default": "443",
      "Description": "TCP Port number on which the Crucible ELB listens for requests.",
      "MaxValue": "65535",
      "MinValue": "1",
      "Type": "Number"
    },
    "CrucibleServicePort": {
      "Default": "80",
      "Description": "TCP Port number that the Crucible host listens to.",
      "MaxValue": "65535",
      "Type": "Number"
    },
    "HaSubnets": {
      "Description": "Select three subnets - each from different Availability Zones.",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "CrucibleInstanceId": {
      "Description": "ID of the EC2-instance this template should create a proxy for.",
      "Type": "String"
    },
    "ProxyPrettyName": {
      "Description": "A short, human-friendly label to assign to the ELB (no capital letters).",
      "Type": "String"
    },
    "SecurityGroupIds": {
      "Description": "List of security groups to apply to the ELB.",
      "Type": "List<AWS::EC2::SecurityGroup::Id>"
    },
    "TargetVPC": {
      "AllowedPattern": "^vpc-[0-9a-f]*$",
      "Description": "ID of the VPC to deploy cluster nodes into.",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "CruciblePubAlbListener": {
      "Properties": {
        "Certificates": [
          {
            "CertificateArn": {
              "Fn::Join": [
                "",
                [
                  "arn:",
                  { "Ref": "AWS::Partition" },
                  ":acm:",
                  { "Ref": "AWS::Region" },
                  ":",
                  { "Ref": "AWS::AccountId" },
                  ":",
                  "certificate/",
                  { "Ref": "CrucibleListenerCert" }
                ]
              ]
            }
          }
        ],
        "DefaultActions": [
          {
            "Type": "forward",
            "TargetGroupArn": { "Ref": "CruciblePubAlbTgroup" }
          }
        ],
        "LoadBalancerArn": { "Ref": "CruciblePubAlbLoadBalancer" },
        "Port": { "Ref": "CrucibleListenPort" },
        "Protocol": "HTTPS"
      },
      "Type" : "AWS::ElasticLoadBalancingV2::Listener"
    },
    "CruciblePubAlbLoadBalancer": {
      "Properties": {
        "Name": {
          "Fn::If": [
            "SetPrettyName",
            { "Ref": "ProxyPrettyName" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "Scheme": "internet-facing",
        "SecurityGroups": { "Ref": "SecurityGroupIds" },
        "Subnets": { "Ref": "HaSubnets" },
        "Tags": [
          {
            "Key": "Name",
            "Value": "Crucible front-end ELB"
          }
        ],
        "Type": "application"
      },
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer"
    },
    "CruciblePubAlbTgroup": {
      "Properties": {
        "HealthCheckPath": "/secure/Dashboard.jspa",
        "HealthyThresholdCount": "5",
        "Name": {
          "Fn::Join": [
            "-",
            [
              {
                "Fn::Select": [
                  "0",
                  {
                    "Fn::Split": [
                      "-",
                      {
                        "Ref": "AWS::StackName"
                      }
                    ]
                  }
                ]
              },
              "TargetGroup"
            ]
          ]
        },
        "Port": { "Ref": "CrucibleServicePort" },
        "Protocol": "HTTP",
        "Targets": [
          {
            "Id": { "Ref": "CrucibleInstanceId" },
            "Port": { "Ref": "CrucibleServicePort" }
          }
        ],
        "UnhealthyThresholdCount": "2",
        "VpcId": { "Ref": "TargetVPC" }
      },
      "Type" : "AWS::ElasticLoadBalancingV2::TargetGroup"
    }
  }
}
